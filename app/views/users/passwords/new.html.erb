<div class="container">
  <div class="work-contents">
    <div class="inner">
      <section class="works">
        <h2 class="works__h2">Password</h2>
        <div class="works__top">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field clearfix">
              <%= f.label :email, class: 'form__l' %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__f' %>
            </div>

            <div class="actions field__btn clearfix">
              <%= f.submit "Send me reset password instructions", class: 'submit-btn' %>
            </div>

            <%= render "users/shared/links" %>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</div>