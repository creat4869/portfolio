          = link_to "投稿", new_gallery_path, class: 'btn_f'
        %div
          %ul
            = render @galleries
          .pagination-inner
            = paginate(@galleries)
  .top-contents2
    .inner
      %section.menu2
        %div
          %ul
            %li
              = link_to abouts_path do
                %div
                  = image_tag "about.png"
